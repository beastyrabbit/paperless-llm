# Stage 1: Base with pnpm
FROM node:22-alpine AS base

# Build argument for version (passed from build script)
ARG APP_VERSION=dev
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable && corepack prepare pnpm@9.15.0 --activate

# Stage 2: Builder (install deps + build in same stage for workspace symlinks)
FROM base AS builder
WORKDIR /app

# Pass version to Next.js build (NEXT_PUBLIC_ vars are inlined at build time)
ARG APP_VERSION=dev
ENV NEXT_PUBLIC_APP_VERSION=$APP_VERSION

# Copy workspace root files
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json ./

# Copy all package.json files
COPY packages/ui/package.json ./packages/ui/
COPY packages/eslint-config/package.json ./packages/eslint-config/
COPY packages/typescript-config/package.json ./packages/typescript-config/
COPY apps/web/package.json ./apps/web/

# Copy workspace packages source (needed for @repo/ui which exports raw TS)
COPY packages/typescript-config ./packages/typescript-config
COPY packages/eslint-config ./packages/eslint-config
COPY packages/ui ./packages/ui

# Copy frontend app
COPY apps/web ./apps/web

# Install all dependencies with hoisting for Next.js compatibility
RUN --mount=type=cache,id=pnpm,target=/pnpm/store \
    pnpm install --frozen-lockfile --shamefully-hoist

# Build with turbo
ENV NEXT_TELEMETRY_DISABLED=1
RUN pnpm turbo run build --filter=@repo/web

# Stage 3: Production Runner
FROM node:22-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV HOSTNAME="0.0.0.0"
ENV PORT=3765

# Security: non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Copy Next.js standalone output
COPY --from=builder /app/apps/web/.next/standalone ./
COPY --from=builder /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder /app/apps/web/public ./apps/web/public

# Copy i18n messages (required at runtime for next-intl)
COPY --from=builder /app/apps/web/messages ./apps/web/messages

USER nextjs

EXPOSE 3765

CMD ["node", "apps/web/server.js"]
