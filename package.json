{
  "name": "paperless-local-llm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:backend": "turbo run dev --filter=@repo/backend",
    "dev:parallel": "concurrently \"pnpm dev:backend\" \"pnpm dev:web\"",
    "migrate": "pnpm exec tsx scripts/migrate-to-tinybase.ts",
    "migrate:dry-run": "pnpm exec tsx scripts/migrate-to-tinybase.ts --dry-run",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "precommit": "pnpm run typecheck && pnpm run lint",
    "demo:record": "bunx tsx scripts/record-demo.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.5.0",
    "concurrently": "^9.2.1",
    "playwright": "^1.57.0",
    "tsx": "^4.21.0",
    "turbo": "^2.5.0"
  },
  "packageManager": "pnpm@9.15.0"
}
